# Secret Key for Django
SECRET_KEY=change_this_to_a_random_secret_key

# Debug Mode (True for development, False for production)
DEBUG=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=example.com,www.example.com

# Database Configuration URL
DATABASE_URL=postgres://example_user:example_password@localhost:5432/example_db

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=exampleAccount;AccountKey=exampleKey;EndpointSuffix=core.windows.net
AZURE_STORAGE_ACCOUNT_NAME=exampleAccount
AZURE_STORAGE_CONTAINER_NAME=exampleContainer

# Google OAuth2 Configuration for Social Authentication
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=exampleGoogleOAuth2Key
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=exampleGoogleOAuth2Secret

# Email Configuration
EMAIL_HOST_USER=example@gmail.com
EMAIL_HOST_PASSWORD=exampleEmailPassword

# Sentry Configuration
SENTRY_DSN=https://exampleSentryDsn@sentry.io/exampleProjectId

# VirusTotal
VIRUSTOTAL_API_URL=https://www.virustotal.com/api/v3/

# Additional Environment Variables

# S3 Configuration
AWS_S3_SECURE_URLS=True
AWS_S3_ENDPOINT_URL=https://s3.example-region.amazonaws.com

# Security and Compliance
DATA_RETENTION_PERIOD=365
ENCRYPTED_STORAGE=True

# Logging and Monitoring
LOG_LEVEL=INFO
MONITORING_SERVICE_API_KEY=exampleMonitoringServiceApiKey

# Backup and Disaster Recovery
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET_NAME=exampleBackups

# Feature Flags
FEATURE_FLAG_NEW_UI=False

# External Services
EXTERNAL_API_TIMEOUT=10

# Email Configuration
EMAIL_USE_TLS=True
EMAIL_PORT=587